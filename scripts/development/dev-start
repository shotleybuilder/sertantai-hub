#!/bin/bash
# Legacy dev-start wrapper - use sert-hub-start instead
#
# This script is kept for backward compatibility.
# Preferred usage:
#   sert-hub-start --docker --auth    # Thin test (hub + auth + containers)
#   sert-hub-start --docker --thick   # Thick test (full micro-services stack)

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

echo "Note: 'dev-start' is deprecated. Use 'sert-hub-start' instead."
echo ""
exec "$SCRIPT_DIR/sert-hub-start" --docker --auth "$@"
