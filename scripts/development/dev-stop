#!/bin/bash
# Legacy dev-stop wrapper - use sert-hub-stop instead
#
# This script is kept for backward compatibility.
# Preferred usage:
#   sert-hub-stop                     # Stop hub servers
#   sert-hub-stop --docker --thick    # Stop everything

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

echo "Note: 'dev-stop' is deprecated. Use 'sert-hub-stop' instead."
echo ""
exec "$SCRIPT_DIR/sert-hub-stop" "$@"
